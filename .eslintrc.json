{
  "parser": "babel-eslint",
  "root": true,
  "extends": "airbnb",
  "globals": {
    "chrome": true
  },
  "env": {
    "browser": true,
    "node": true
  },
  "settings": {
    "import/resolver": {
      "node": {
        "moduleDirectory": [
          "node_modules",
          "src/js",
          "src"
        ]
      }
    }
  },
  "rules": {
    "indent": [ "error", 2 ],
    "no-debugger": "warn",
    "react/jsx-closing-bracket-location": [ "error", "after-props" ],
    "import/no-extraneous-dependencies": [ "error", { "dependencies": true } ]
  }
}
